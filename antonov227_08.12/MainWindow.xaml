<Window x:Class="antonov227_08._12.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:antonov227_08._12"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
            <TextBlock Text="Введите цену за кг конфет:" Margin="0,0,0,10"/>
            <TextBox x:Name="priceTextBox" Width="100" Margin="0,0,0,10"/>
            <Button Content="Рассчитать" Click="Button_Click" />
            <TextBlock x:Name="resultTextBlock" Margin="0,10,0,0"/>
        </StackPanel>
    </Grid>
</Window>
